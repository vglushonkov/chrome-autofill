{
  "manifest_version": 3,
  "name": "FormFiller",
  "version": "1.1",
  "description": "Set the value of any field on any page. It will be there next time you visit the page. It's that simple.",
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/field-identifier.js",
        "utils/field-selector.js",
        "storage/storage.js",
        "content/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "FormFiller",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content/autofill-styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
